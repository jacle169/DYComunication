<Window x:Class="KeyCreater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="LoadData" Height="23" HorizontalAlignment="Left" Margin="12,288,0,0" Name="bt_load" VerticalAlignment="Top" Width="75" />
        <TabControl Margin="0,0,0,26">
        	<TabItem Header="用户">
        		<Grid Background="#FFE5E5E5" HorizontalAlignment="Left" Width="500.6">
        			<DataGrid AutoGenerateColumns="True" x:Name="dg_userTable" Height="140" VerticalAlignment="Top" HorizontalAlignment="Left" Width="491" Margin="7,34,0,0" />
                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="7,5,0,0" Name="cb_col" VerticalAlignment="Top" Width="75" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="88,5,0,0" Name="tb_selectText" VerticalAlignment="Top" Width="62" />
                    <Button Content="搜" Height="23" HorizontalAlignment="Left" Margin="156,5,0,0" Name="bt_select" VerticalAlignment="Top" Width="33" />
                </Grid>
        	</TabItem>
        	<TabItem Header="日志">
        		<Grid Background="#FFE5E5E5">
        			<DataGrid AutoGenerateColumns="True" Height="252.163" x:Name="dg_log" VerticalAlignment="Top" HorizontalAlignment="Left" Width="500.6" />
        		</Grid>
        	</TabItem>
        </TabControl>
    </Grid>
</Window>
